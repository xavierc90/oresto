{
    "swaggerDefinition": {
        "openapi": "3.0.0",
        "info": {
            "title": "Oresto - Reservation app restaurant",
            "version": "1.0.0",
            "description": "API documentation"
        },
        "servers": [{
            "url": "http://localhost:3001",
            "description": "Development server"
        }],
        "components": {
            "securitySchemes": {
                "bearerAuth": {
                    "type": "http",
                    "scheme": "bearer",
                    "bearerFormat": "JWT"
                }
            },
            "schemas": {
                "User": {
                    "type": "object",
                    "required": ["firstname", "lastname", "email", "phone_number", "password"],
                    "properties": {
                        "firstname": {
                            "type": "string",
                            "description": "The user's firstname",
                            "example": "John"
                        },
                        "lastname": {
                            "type": "string",
                            "description": "The user's lastname",
                            "example": "Doe"
                        },
                        "email": {
                            "type": "string",
                            "description": "The user's email",
                            "example": "johndoe@example.com"
                        },
                        "phone_number": {
                            "type": "string",
                            "description": "The user's phone number",
                            "example": "+1234567890"
                        },
                        "password": {
                            "type": "string",
                            "description": "The user's password",
                            "example": "secret"
                        },
                        "token": {
                            "type": "string",
                            "description": "An optional token for the user",
                            "example": "somerandomtoken"
                        }
                    }
                },
                "Login": {
                    "type": "object",
                    "required": ["email", "password"],
                    "properties": {
                        "email": {
                            "type": "string",
                            "description": "The user's email",
                            "example": "johndoe@example.com"
                        },
                        "password": {
                            "type": "string",
                            "description": "The user's password",
                            "example": "secret"
                        }
                    }
                },
                "Register": {
                    "type": "object",
                    "required": ["firstname", "lastname", "email", "phone_number", "password"],
                    "properties": {
                        "email": {
                            "type": "string",
                            "description": "The user's email",
                            "example": "johndoe@example.com"
                        },
                        "password": {
                            "type": "string",
                            "description": "The user's password",
                            "example": "secret"
                        }
                    }
                }
            },
            "responses": {
                "NotFound": {
                    "description": "Resource not found",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "type_error": {
                                        "type": "string",
                                        "example": "no-found"
                                    },
                                    "message": {
                                        "type": "string",
                                        "example": "Resource not found"
                                    }
                                }
                            }
                        }
                    }
                },
                "ValidationError": {
                    "description": "Validation error",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "type_error": {
                                        "type": "string",
                                        "example": "validator"
                                    },
                                    "message": {
                                        "type": "string",
                                        "example": "Validation error"
                                    }
                                }
                            }
                        }
                    }
                },
                "DuplicateError": {
                    "description": "Duplicate entry",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "type_error": {
                                        "type": "string",
                                        "example": "duplicate"
                                    },
                                    "message": {
                                        "type": "string",
                                        "example": "Duplicate entry"
                                    }
                                }
                            }
                        }
                    }
                },
                "MongoError": {
                    "description": "Internal server error",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "type_error": {
                                        "type": "string",
                                        "example": "error-mongo"
                                    },
                                    "message": {
                                        "type": "string",
                                        "example": "Internal server error"
                                    }
                                }
                            }
                        }
                    }
                }
                
            }
        },
        "tags": [{
                "name": "User",
                "description": "Operations about user"
            },
            {
                "name": "Reservations",
                "description": "Operations about reservations"
            }
        ]
    },
    "apis": [
        "./controllers/*.js"
    ]
}